#include <iostream>
using namespace std;

int main () {
    int number; 

    cout << "Podaj liczbe calkowita: ";
    cin >> number;
    if (number >0) {
        cout << "Wpisales dodatnia liczbe calkowita: " << number << endl;
    }
    else {
        cout << "Wpisałeś liczbe ujemną: " << number  << endl;
    }
    if (number == 0) {
        cout << "Wpisales 0" << endl;
    return 0;
    } 
}
